<tr class="todo">
    <!-- je me repÃ©re dans mon tableau et prend le titre qui coresspond (l.6) -->
    <!-- toDateString est une fonction pour mettre en forme la date (l.21-22) -->
    <!-- data-id prend la valeur de l'id de mon todos (l.28-30) -->
    <td>
        <%=todo.title %>
    </td>
    <td>
        <%=todo.content %>
    </td>
    <td>
        <%=todo.user %>
    </td>
    <td class="state">
        <%=todo.state %>
    </td>
    <td>
        <%=todo.deadline %>
    </td>
    <td>
        <%=todo.cretation_date.toDateString() %>
    </td>
    <td>
        <%=todo.update_date.toDateString() %>
    </td>

    <td>
        <button type="button" class="done-button btn btn-success" data-id="<%= todo._id %>" data-state="<%= todo.state %>"> <i class="far fa-edit"></i></button>
    </td>
    <td>
        <button type="button" class="delete-button btn btn-danger" data-id="<%=todo._id%>" data-state="<%= todo.state %>"><i class="far fa-times-circle"></i></button>
    </td>
</tr>
 